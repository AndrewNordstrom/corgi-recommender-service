# Corgi Recommender Service - Docker Environment Configuration
# Copy this file to .env and update with your values

# PostgreSQL Database Configuration
POSTGRES_USER=corgi
POSTGRES_PASSWORD=corgi123
POSTGRES_DB=corgi_db
POSTGRES_HOST_PORT=5432

# Redis Configuration
REDIS_HOST_PORT=6379

# Corgi API Configuration
CORGI_API_HOST_PORT=5002
CORGI_ENV=development
FLASK_ENV=development
DEBUG=false

# ELK Client Configuration
ELK_CLIENT_HOST_PORT=3000
ELK_DEFAULT_SERVER=mastodon.social

# CORS Configuration (for client-agnostic API)
# Use * for development, specify domains for production
CORS_ORIGINS=*

# Optional: Advanced Configuration
# API_SECRET_KEY=your-secret-key-here
# JWT_SECRET_KEY=your-jwt-secret-here
# LOG_LEVEL=INFO

# Optional: External Services
# SENTRY_DSN=
# OPENAI_API_KEY=

# Docker Network Configuration
# DOCKER_NETWORK_SUBNET=172.20.0.0/16 